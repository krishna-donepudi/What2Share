<div class="row valign-wrapper" id="topbar">
    <div class="col s10">
        <br/><%= image_tag("logo.png", :height => '70', :width => 'auto', :class => 'top_bar_pic') %>
    </div>
    <div class="col s10 pull-s5">
        <ul>
            <% unless current_user.nil? %>
                <li><%= link_to 'Logout', logout_path %></li>              
                <li><%= link_to 'My Forms', edit_apps_path(current_user) %></li>
                <li><%= link_to 'My Account', user_path(current_user) %></li>  
            <% end %>
        </ul>
    </div>
</div>